{
    "name": "website",
    "version": "1.0.5",
    "description": "The code that builds and serves g.hslp.ca. Powered by Node.js and the Hapi framework.",
    "homepage": "https://g.hslp.ca/",
    "author": {
        "name": "Grant Heaslip",
        "email": "g@hslp.ca",
        "url": "https://g.hslp.ca/"
    },
    "private": true,
    "engines": {
        "node": "^10.6.0"
    },
    "main": "server.js",
    "scripts": {
        "build": "node node_modules/gulp/bin/gulp.js build",
        "start": "node server.js",
        "heroku-postbuild": "node node_modules/gulp/bin/gulp.js build"
    },
    "license": "BSD-3-Clause",
    "dependencies": {
        "del": "^3.0.0",
        "ejs": "^2.6.1",
        "gulp": "^3.9.1",
        "gulp-clean-css": "^3.9.4",
        "gulp-rev": "^8.1.1",
        "gulp-rev-replace": "^0.4.4",
        "hapi": "^17.5.2",
        "inert": "^5.1.0",
        "run-sequence": "^2.2.1",
        "throng": "^4.0.0",
        "vision": "^5.3.3"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "browser": true,
            "commonjs": true,
            "es6": true,
            "node": true
        },
        "parserOptions": {
            "ecmaVersion": 2017,
            "sourceType": "module"
        },
        "rules": {
            "indent": [
                "error",
                4
            ],
            "linebreak-style": [
                "error",
                "unix"
            ],
            "no-console": "off",
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "always"
            ]
        }
    }
}
