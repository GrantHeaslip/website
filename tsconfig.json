{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "jsxFactory": "h",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "plugins": [
            {
                "name": "typescript-styled-plugin",
                "lint": {
                    "validProperties": [
                        "color-scheme"
                    ]
                }
            }
        ],
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2017"
    },
    "include": [
        "src/**/*",
        "types.d.ts"
    ]
}
